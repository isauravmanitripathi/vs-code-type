{
  "name": "json-project-builder",
  "displayName": "json-project-builder",
  "description": "Build a complete education video from a simple json structure",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-project-builder.buildFromJson",
        "title": "Build Project from JSON Blueprint"
      },
      {
        "command": "json-project-builder.buildFromPath",
        "title": "Build Project from Path (Automation)"
      },
      {
        "command": "json-project-builder.testWithPath",
        "title": "JSON Project Builder: Test with Path"
      }
    ],
    "configuration": {
      "title": "JSON Project Builder",
      "properties": {
        "json-project-builder.server.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable HTTP server for automation (allows triggering blueprints via POST requests)"
        },
        "json-project-builder.server.port": {
          "type": "number",
          "default": 6969,
          "description": "Port number for HTTP server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "edge-tts-universal": "^1.3.2",
    "node-mac-recorder": "^2.20.17"
  }
}